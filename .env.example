# XWiki Stack Configuration
# Copy to .env and fill in real values

# === Ports ===
XWIKI_PORT=8085
POSTGRES_PORT=5433
BRIDGE_PORT=8090
AUTODOC_PORT=8091
ANYTHINGLLM_PORT=3001

# === PostgreSQL ===
POSTGRES_USER=xwiki
POSTGRES_PASSWORD=CHANGEME
POSTGRES_DB=xwiki

# === XWiki ===
XWIKI_ADMIN_USER=admin
XWIKI_ADMIN_PASSWORD=CHANGEME
XWIKI_URL=http://xwiki:8080
XWIKI_EXTERNAL_URL=http://YOUR_HOST_IP:8085

# === Ollama (external) ===
OLLAMA_URL=http://YOUR_OLLAMA_HOST:11434
OLLAMA_MODEL=qwen2.5:14b
OLLAMA_EMBED_MODEL=nomic-embed-text

# === GitHub ===
GITHUB_USER=YOUR_GITHUB_USER
GITHUB_TOKEN=CHANGEME

# === AnythingLLM ===
ANYTHINGLLM_URL=http://anythingllm:3001
ANYTHINGLLM_API_KEY=CHANGEME

# === AutoDoc Scan Targets ===
# Remote Docker hosts (comma-separated, in addition to local socket)
DOCKER_HOSTS=tcp://YOUR_REMOTE_DOCKER:2375
SCAN_SUBNETS=192.168.1.0/24,10.10.0.0/24
SCAN_INTERVAL_HOURS=24

# === ESXi ===
ESXI_HOST=YOUR_ESXI_HOST
ESXI_USER=root
ESXI_SSH_KEY_PATH=/keys/esxi_rsa

# === Synology ===
SYNOLOGY_HOST=YOUR_SYNOLOGY_HOST
SYNOLOGY_USER=root
SYNOLOGY_SSH_KEY_PATH=/keys/synology_ed25519

# === Confluence (migration) ===
CONFLUENCE_URL=http://YOUR_CONFLUENCE_HOST:8090
CONFLUENCE_USER=CHANGEME
CONFLUENCE_PASSWORD=CHANGEME
CONFLUENCE_SPACE=NETOPS
